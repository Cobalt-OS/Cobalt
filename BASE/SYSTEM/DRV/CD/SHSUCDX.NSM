	mov	di, bx
	mov	bx, rh_rl
	ses	di, bx+rhReadLong.Bufp
	mmovd	bx+rhReadLong.StartBlk
	mov	[bx+rhReadLong.Count], cx
	ld	es, ds
	call	DDCall
	cmpw	[bx+rh.Status], 100h
	return


