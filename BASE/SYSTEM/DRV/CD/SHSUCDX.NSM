;	ZR sector successfully read
;	NZ failed
;	   EAX destroyed
;
; Destroys:
;	CX (1)
;-
CdReadPVD
%ifdef i8086
	mov	ax, 10h
	cwd
%else
	zero	eax
	mov	al, 10h
%endif

CdReadBlk
	uses	es,bx,di
	mov	di, [BP_(DriveOfs)]
%ifdef i8086
	if {ax ,ne, [di+DrvEnt.BufBlkNo]} OR {dx ,ne, [di+DrvEnt.BufBlkNo+2]}
%else
	if eax ,ne, [di+DrvEnt.BufBlkNo]
%endif
	 ld	es, ds
	 mov	bx, [di+DrvEnt.Bufp]
	 call	CdReadLong1
%ifdef i8086
	 if. nz, mov dx, -1
%else
	 if. nz, or eax, -1
%endif
	 mmovd	di+DrvEnt.BufBlkNo
	fi
	return


;+
