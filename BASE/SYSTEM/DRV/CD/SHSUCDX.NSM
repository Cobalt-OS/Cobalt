	ifnz si, \
	 testb	[si+DirEnt.Fattr], A_SUBDIR
	ret


;+
; FUNCTION : Lookup
;
;	Find a name.
;
; Parameters:
;	ES:BX -> path
;
; Returns:
;	NC name found
;	   SI -> directory entry
;	   file_name := name in FCB style
;	CY name not found
;	   SI := 0
;	   AX := error
;
; Destroys:
;	AX,BX,CX,DX
;-
Lookup	uses	di

	; Start at root
	call	RootEnt

	; Skip drive letters form \\D.\U.
	lea	di, [bx+RootSlashOff]
	do
	 break	[es:di] zb		; clears carry
	 mov	bx, di
	 inc	di
	 repeat
	  inc	bx
	  mov	al, [es:bx]
	 until al ,e, {PATHSEPARATOR,0}
	 mov	cx, bx
	 sub	cx, di			; clears carry
	 jz	.trail
	 push	bx
	  zero	dx
	  mov	bx, file_name
	  call	ToFCB
	  call	DirLook
	 pop	di
	while nc
	return

.trail: mov	[es:di-1], cl		; remove trailing separator
	ret.


;+
; FUNCTION : DirLook
