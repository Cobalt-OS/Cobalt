	mov	di, [bx+DirEnt.Back]
	mmovd	di+DirEnt.ParentBlk
%ifdef HS
	movzx.	bx, [bx+DrvEnt.Type-DrvEnt.RootEnt]
	mov	al, [si+bx]
%else
	mov	al, [si+isoDir.Flags]
%endif
	call	ToDosAttr
	call	DirFieldCopy
